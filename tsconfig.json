{
  "compilerOptions": {
    "outDir": "./",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop":false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "templates",
    "node_modules"
  ]
}
